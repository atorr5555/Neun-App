<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <TextView
        android:id="@+id/textViewFocosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Focos"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switchFoco1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Garage"
        android:textOn="ON"
        app:layout_constraintStart_toStartOf="@+id/textViewFocosTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewFocosTitle" />

    <Switch
        android:id="@+id/switchFoco2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Sala 1"
        app:layout_constraintStart_toEndOf="@+id/switchFoco1"
        app:layout_constraintTop_toBottomOf="@+id/textViewFocosTitle" />

    <Switch
        android:id="@+id/switchFoco3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Cuarto"
        app:layout_constraintStart_toEndOf="@+id/switchFoco2"
        app:layout_constraintTop_toBottomOf="@+id/textViewFocosTitle" />

    <Switch
        android:id="@+id/switchFoco4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Sala 2"
        app:layout_constraintStart_toEndOf="@+id/switchFoco3"
        app:layout_constraintTop_toBottomOf="@+id/textViewFocosTitle" />

    <Switch
        android:id="@+id/switchFoco5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cocina"
        app:layout_constraintEnd_toEndOf="@+id/switchFoco1"
        app:layout_constraintStart_toStartOf="@+id/switchFoco1"
        app:layout_constraintTop_toBottomOf="@+id/switchFoco1" />

    <Switch
        android:id="@+id/switchFoco7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Puerta patio"
        app:layout_constraintEnd_toEndOf="@+id/switchFoco3"
        app:layout_constraintStart_toStartOf="@+id/switchFoco3"
        app:layout_constraintTop_toBottomOf="@+id/switchFoco3" />

    <Switch
        android:id="@+id/switchFoco8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Entrada"
        app:layout_constraintEnd_toEndOf="@+id/switchFoco4"
        app:layout_constraintStart_toStartOf="@+id/switchFoco4"
        app:layout_constraintTop_toBottomOf="@+id/switchFoco4" />

    <Switch
        android:id="@+id/switchFoco6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="BaÃ±o"
        app:layout_constraintEnd_toEndOf="@+id/switchFoco2"
        app:layout_constraintStart_toStartOf="@+id/switchFoco2"
        app:layout_constraintTop_toBottomOf="@+id/switchFoco2" />

    <TextView
        android:id="@+id/textViewPuertas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="308dp"
        android:layout_marginRight="308dp"
        android:text="Puertas"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/switchFoco9"
        app:layout_constraintTop_toBottomOf="@+id/switchFoco9" />

    <Switch
        android:id="@+id/switchPuertaPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Principal"
        app:layout_constraintEnd_toEndOf="@+id/textViewPuertas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewPuertas"
        app:layout_constraintTop_toBottomOf="@+id/textViewPuertas" />

    <Switch
        android:id="@+id/switchPuertaPatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="16dp"
        android:text="Patio"
        app:layout_constraintStart_toStartOf="@+id/textViewPuertas"
        app:layout_constraintTop_toBottomOf="@+id/textViewPuertas" />

    <Switch
        android:id="@+id/switchGarage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="Garage"
        app:layout_constraintStart_toEndOf="@+id/switchPuertaPatio"
        app:layout_constraintTop_toBottomOf="@+id/textViewPuertas" />

    <EditText
        android:id="@+id/EditTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Nombre del perfil"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchPuertaPatio" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTextName" />

    <Switch
        android:id="@+id/switchFoco9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Patio 1"
        app:layout_constraintStart_toStartOf="@+id/switchFoco5"
        app:layout_constraintTop_toBottomOf="@+id/switchFoco5" />

    <Switch
        android:id="@+id/switchFoco10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:text="Patio 2"
        app:layout_constraintStart_toEndOf="@+id/switchFoco9"
        app:layout_constraintTop_toBottomOf="@+id/switchFoco6" />

</android.support.constraint.ConstraintLayout>